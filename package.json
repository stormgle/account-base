{
  "name": "@stormgle/user-services",
  "version": "1.0.0",
  "description": "Service provides user authentication utilities",
  
  "scripts": {
    "setup": "node scripts/setup",
    "start:db": "cd localdb && java -Djava.library.path=./DynamoDBLocal_lib -jar DynamoDBLocal.jar -port 3001 -sharedDb",
    "db:new": "concurrently \"npm run start:db\" \"node scripts/createTable.js\" ",
    "db:drop": "concurrently \"npm run start:db\" \"node scripts/dropTable.js\" ",
    "db:reset": "concurrently \"npm run start:db\" \"node scripts/resetTable.js\" ",
    "clean": "rm -rf ./.build",
    "clean:local": "rm -rf ./.build/local",
    "build:local": "npm run clean:local && webpack --config webpack.config.local.js",
    "start:local": "concurrently \"npm run start:db\" \"nodemon src/signup.local.js\" \"nodemon src/login.local.js\" \"nodemon src/update/profile.local.js\"",
    "start:update": "concurrently \"npm run start:db\" \"nodemon src/update/profile.local.js\"",
    "test": "mocha test/test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stormgle/user-services"
  },
  "keywords": [
    "user",
    "authentication"
  ],
  "author": "duongtdn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stormgle/user-services/issues"
  },
  "homepage": "https://github.com/stormgle/user-services#readme",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "dynamodb-local": "0.0.20",
    "mocha": "^5.0.1",
    "nodemon": "^1.17.1",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.9",
    "webpack-node-externals": "^1.6.0",
    "@stormgle/userdb-dynamodb": "^1.0.0"
  },
  "dependencies": {
    "@stormgle/userdb-api": "^1.0.0",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "express-jwt": "^5.3.0",
    "jsonwebtoken": "^8.1.1",
    "uuid": "^3.2.1"
  }
}
