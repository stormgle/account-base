{
  "name": "@stormgle/account-base",
  "version": "2.2.2",
  "description": "micro-service for managing accounts",
  "main": "api/main.js",
  "scripts": {
    "setup": "node scripts/setup",
    "docker:db": "docker run -v \"$PWD\":/dynamodb_local_db -p 3001:8000 --network sam-local cnadiminti/dynamodb-local",
    "db:reset": "concurrently \"npm run db:start\" \"node scripts/resetDatabase.js\" ",
    "db:init": "concurrently \"npm run db:start\" \"node scripts/initDatabase.js\" ",
    "db:start": "npm run docker:db",
    "local": "concurrently \"npm run db:start\" \"nodemon example/app.local.js\"",
    "example": "npm run setup && npm run local",
    "test": "clear && mocha test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stormgle/account-base"
  },
  "keywords": [
    "user",
    "authentication"
  ],
  "author": "duongtdn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stormgle/account-base/issues"
  },
  "homepage": "https://github.com/stormgle/account-base#readme",
  "devDependencies": {
    "@stormgle/userdb-dynamodb-driver": "^1.0.3",
    "database-abstractor": "^1.0.0",
    "concurrently": "^3.5.1",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "body-parser": "^1.18.2",
    "express": "^4.16.2",
    "mocha": "^5.0.1",
    "nodemon": "^1.17.1"
  },
  "dependencies": {
    "express-api-binder": "^1.1.0",
    "@stormgle/jtoken-util": "^1.0.0",
    "jsonwebtoken": "^8.2.1",
    "uuid": "^3.2.1"
  }
}
